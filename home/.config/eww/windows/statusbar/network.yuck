(deflisten network "scripts/network.py")

(defwidget connection [type]
  (revealer
    :transition "slideleft"
    :reveal {network[type] != "null"}
    (label
      :class "icon"
      :text {network[type]["icon"]}
    )
  )
)

(defwidget network []
  (box
    :spacing 2
    :orientation "h"
    :space-evenly false
    (connection :type "gsm")
    (connection :type "wifi")
    (connection :type "ethernet")
  )
)
